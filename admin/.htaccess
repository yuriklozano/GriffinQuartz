# Protect admin directory
Options -Indexes

# Enable mod_rewrite
RewriteEngine On
RewriteBase /admin/

# Redirect /admin/leads to /admin/leads.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/admin/$1.php -f
RewriteRule ^(.*)$ $1.php [L,QSA]

# Note: Subdirectories (blog/, includes/) have their own access rules
# Root level PHP files are protected except leads.php
