# Protect admin directory
Options -Indexes

# Enable mod_rewrite
RewriteEngine On
RewriteBase /admin/

# Redirect /admin/leads to /admin/leads.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/admin/$1.php -f
RewriteRule ^(.*)$ $1.php [L,QSA]

# Block direct access to PHP files except leads.php
<FilesMatch "^(?!leads\.php$).+\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>
